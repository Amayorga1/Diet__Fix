@model IEnumerable<Diet__Fix.Models.DietType>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center"> Diet Plans</h1>


<div class="row">
    <div class="col-3" style="border:solid; border-color:gray">
        <h2 style="text-align:center">Ketogenic</h2>
        <br />
        Often known as "Keto", is a low carb diet. This diet allows you to consume more calories from protien and fat with less
        carbohydrate intake.
        <br />
        <a asp-action="KetoDiet" class="btn btn-info">More Info!</a>
    </div>


    <div class="col-3" style="border:solid; border-color:gray">
        <h2>Paleo</h2>
        <br />
        A dietary plan based on foods similar to what might have been eaten during the Paleolithic era
        which dates from 2.5 million to 10,000 years ago.
        <br />
        <a asp-action="PaleoDiet" class="btn btn-info">More Info!</a>
    </div>


    <div class="col-3" style="border:solid; border-color:gray">
        <h2>Mediterranean</h2>
        <br />
        A diet consisting of large quantities of fresh fruits, vegetables, nuts, fish, olive oil and red wine in moderation.
        <br />
        <a asp-action="MediDiet" class="btn btn-info">More Info!</a>
    </div>


    <div class="col-3" style="border:solid; border-color:gray">
        <h2>Intermittent</h2>
        <br />
        A fasting diet focused on not what you can eat, but at what times you can eat.
        <br />
        <a asp-action="IntermDiet" class="btn btn-info">More Info!</a>
    </div>
</div>

