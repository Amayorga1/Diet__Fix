@model IEnumerable<Diet__Fix.Models.CostAnalysis>

@{
    ViewData["Title"] = "Index";
}

<h1>Cost Analysis</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CostOptions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PastCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostComparison)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CostOptions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PastCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostComparison)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
